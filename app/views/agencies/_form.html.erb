<style>.fix-label-group {
  align-items: center;
}

.fix-label-item {
  height: calc(2.25rem + 2px);
}</style>
<%= form_for(@agency) do |f| %>
<%= @agency.errors.full_messages.first if @agency.errors.any? %>
<div class="row">
<div class="input-group col-6">
<div class="input-group-prepend">
<span class="input-group-text">Name</span>
</div>
<input type="text" value="<%=@agency["name"] if @agency.id.nil? == false %>" class="form-control" name="agency[name]" id="agency_name">
</div>
<div class="input-group col-6">
  <div class="input-group-prepend">
  <span class="input-group-text">Address</span>
  </div>
  <input type="text" value="<%=@agency["address"] if @agency.id.nil? == false %>" class="form-control" name="agency[address1]" id="agency_address1">
  </div>
  </div>
  <div class ="row">
    <hr>
    </div>
  <div class="row">
    <div class="input-group col-6">
      <div class="input-group-prepend">
      <span class="input-group-text">City</span>
      </div>
      <input type="text" value="<%=@agency["city"] if @agency.id.nil? == false %>" class="form-control" name="agency[city]" id="agency_city">
      <select class="custom-select" name="agency[state]" id="agency_state">
      <option value="<%=@agency["state"] if @agency.id.nil? == false %>" selected disabled hidden>State</option>
      <% Agency::STATES.each do |x| %>
      <option><%=x%></option>
      <% end %>
        </select>
    </div>
<div class="input-group col-6">
  <div class="input-group-prepend">
  <span class="input-group-text">Zip</span>
  </div>
  <input type="text" value="<%=@agency["zip"] if @agency.id.nil? == false %>" class="form-control" name="agency[zip]" id="agency_zip">
</div>
</div>
<div class="row">
  <hr>
  </div>
<div class="row">
<%= f.button :Submit, type: :submit, class: 'btn btn-default col-12' %>
</div>
<div class="trailitem"><%= link_to "Cancel", root_path, class: 'button' %></div>
      </div>
<% end %>
