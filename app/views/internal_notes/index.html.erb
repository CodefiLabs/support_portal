<h1>Internal Notes</h1>
<%= render 'layouts/datatables' %>
<%= render 'layouts/header' %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @internal_notes.each do |internal_note| %>
      <tr>
        <td><%= link_to 'Show', internal_note %></td>
        <td><%= link_to 'Edit', edit_internal_note_path(internal_note) %></td>
        <td><%= link_to 'Destroy', internal_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Internal Note', new_internal_note_path %>
<%= render 'layouts/footer' %>
