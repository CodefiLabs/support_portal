<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :internal_status %>
    <%= form.text_field :internal_status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :external_status %>
    <%= form.text_field :external_status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total_time %>
    <%= form.time_field :total_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :adjusted_time %>
    <%= form.time_field :adjusted_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :priority %>
    <%= form.select :priority, Ticket::PRIORITIES, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
