
<div class="container-fluid h-100vh main loginwrapper">
  <%= render 'layouts/header' %>
    <div class="row align-items-center h100vh">
        <div class="col-sm-4 mx-auto login">
            <div class="login_box">

    <h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="field">
    <%= f.label :email %><br />
    <%= fa_icon "user" %> <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= fa_icon "key" %> <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


</div>
</div>
</div>
</div>
  <%= render 'layouts/footer' %>
