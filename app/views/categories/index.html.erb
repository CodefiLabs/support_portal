<%= render partial: 'layouts/datatables' %>
<script>
$(document).ready(function() {
    var table = $('#categoriesList').DataTable( {
        responsive: true
    } );
} );
</script>

<div class="container-fluid h-100 main loginwrapper">
  <%= render 'layouts/header' %>
  <div class="row align-items-center h100">
    <div class="col-sm-12 mx-auto user-table">
      <h1>Categories</h1>
      <button class="signin_button" style="color:#fff;margin-bottom:20px;" data-toggle="modal" data-target="#addcategory"><%= fa_icon "plus"%> Add Category</button>
      <br>
      <table id="categoriesList" class="table table-striped table-bordered responsive no-wrap dt-responsive" style="width:100%">
        <thead>
          <tr>
            <th class="dt-center" scope="col">Title</th>
            <th class="dt-center no-sort" scope="col">Edit</th>
            <th class="dt-center no-sort" scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td class="dt-center" ><%= category.title %></td>
              <td class="dt-center" ><%= link_to edit_category_path(category.id) do %><%= fa_icon 'edit' %><% end %></td>
              <td class="dt-center" ><%= link_to category_path(category),method: :delete, data: { confirm: 'Are you sure?' } do %><%= fa_icon 'trash' %><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="modal fade" id="addcategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render partial: 'categories/new', locals: { category: Category.new } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
</div>
<%= render 'layouts/footer' %>
